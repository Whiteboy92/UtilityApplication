<Window x:Class="UtilityApplication.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:UtilityApplication.Views.Sections"
        xmlns:utility="clr-namespace:UtilityApplication.Utility"
        Title="Utility App"
        MinHeight="400" MinWidth="400"
        Height="400" Width="400"
        Background="#444444"
        WindowStyle="None"
        AllowsTransparency="True"
        ResizeMode="CanResizeWithGrip">

    <Window.Resources>
        <utility:BoolToVisibilityConverter x:Key="BoolToVis" />
    </Window.Resources>

    <Grid>
        <!-- Define two rows: title bar height and the rest -->
        <Grid.RowDefinitions>
            <RowDefinition Height="30"/> <!-- Height of custom title bar -->
            <RowDefinition Height="*"/>  <!-- Remaining space -->
        </Grid.RowDefinitions>

        <!-- TitleBar UserControl in first row -->
        <views:TitleBar Grid.Row="0"/>

        <!-- Main Content in second row -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <Grid>
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
                    <views:HeicToPngSection />
                    <views:PlaylistDownloadSection />
                    <views:Mp3FixSection />
                    <views:VideoCompressionSection />
                </StackPanel>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>